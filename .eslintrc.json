{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "no-use-before-define": [ "error", { "variables": false }],
        "react/prop.types": [ "error", { "ignore": ["navitation", "navitation.navigate" ]} ]
    }
}
